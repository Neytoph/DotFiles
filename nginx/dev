server
{
    listen 80;
    server_name *.dev.my;

    index main.php index.html;

    if ($host ~ ^(\w+)\.(.*)\.dev\.my$ )
    {
        set $app     $1;
        set $path    /Users/baocaixiong/development/$2;
    }

    root $path/gandalf;

    location ~ \.(html|js|css|gif|jpg|png|swf|ico)$
    {
        root $path/public;
    }
    location / {
        try_files $uri $uri/ /main.php?$args;

    }
    location ~ \.php$ {
        #fastcgi_pass   127.0.0.1:9000;
        fastcgi_pass unix:/usr/local/var/run/php-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param REQUEST_APPLICATION $app;
        fastcgi_param DEV_ENV zhangming_dev;
        include fastcgi_params;
    }
}
